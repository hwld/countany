datasource sqlite {
  provider = ["sqlite", "postgresql"]
  url = "file:./dev.db"
}

generator client {
  provider = "prisma-client-js"
  binaryTargets = ["native"]
}

model Counter {
  id String @id
  value Int
  name String
  startWith Int
  amount Int
  maxValue Int
  minValue Int
}